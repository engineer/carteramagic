<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to Cartera Magic</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"} ) do |f| %>
                      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', required: true  %>
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', required: true %>
                      <%= f.button :submit, "Sign in", class: "btn btn-lg btn-primary btn-block" %>
                      <label class="checkbox pull-left">
                          <% if devise_mapping.rememberable? -%>

                              <div class='col-xs-12 text-center'>
                                <%= f.check_box :remember_me %> <%= f.label :remember_me, t( 'remember_me' ), style: 'padding-left:0' %>
                              </div>

                          <% end -%>
                      </label>

                      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "pull-right need-help" %>
                        <span class="clearfix"></span>
                      <% end -%>
                        <br>
                        <%= link_to (user_omniauth_authorize_path(:facebook)), :class => "btn btn-block btn-social btn-facebook" do %>
                            <i class="fa fa-facebook"></i> Sign in with Facebook
                        <% end %>
                  <% end %>
            </div>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "New to Cartera Magic?", new_registration_path(resource_name), class: 'text-center new-account' %><br />
            <% end -%>
        </div>
    </div>
</div>
