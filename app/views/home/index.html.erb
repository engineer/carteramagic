	<!-- FullScreen -->
    <div class="intro-header">
		<div class="col-xs-12 text-center abcen1">
			<h1 class="h1_home wow fadeIn" data-wow-delay="0.4s">PEGI</h1>
			<h3 class="h3_home wow fadeIn" data-wow-delay="0.6s">Alcanza tus metas</h3>
			<ul class="list-inline intro-social-buttons">
        <ul class="list-inline intro-social-buttons">
          <li>
          <% if current_user %>
              <%= link_to ('dashboard'), :class => "btn  btn-lg mybutton_cyano wow swing center" do %>
                <span class="network-name">Administrador</span>
              <% end %>
          <% else %>
            <%= link_to (user_omniauth_authorize_path(:facebook)), :class => "btn  btn-lg mybutton_cyano wow swing center" do %>
                <span class="network-name">Inicia sesión con facebook</span>
            <% end %>
          <% end %>
          </li>
          <li>
          <% if current_user %>
            <%= link_to (destroy_user_session_path),:method => 'DELETE', :class => "btn  btn-lg mybutton_standard wow swing wow fadeIn" do %>
                <span class="network-name">Cerrar Sesión</span>
            <% end %>
          <% else %>
            <%= link_to (new_user_session_path), :class => "btn  btn-lg mybutton_standard wow swing wow fadeIn" do %>
                <span class="network-name">Inicia Sesión</span>
            <% end %>
          <% end %>
          </li>
        </ul>
			</ul>
		</div>
        <!-- /.container -->
		<div class="col-xs-12 text-center abcen wow fadeIn">
			<div class="button_down ">
